@model Sarfaraz.Models.employee_salary_details
@{
    ViewBag.Title = "edit2";
}

<h2>edit2</h2>
@using (Html.BeginForm("Updatedata", "bit3"))
{
    <input type="hidden" name="id" value="@Model.id" />
    <label class="col-md-2">Employee_id</label>
    <div class="col-md-4">
        <input type="text" name="employee_id" class="form-control" value="@Model.employee_id" />
    </div>
    <label class="col-md-2">salary_paid</label>
    <div class="col-md-4">
        <input type="text" name="salary_paid" class="form-control" value="@Model.salary_paid" />
    </div>
    <label class="col-md-2">paid_date</label>
    <div class="col-md-4">
        <input type="text" name="paid_date" class="form-control" value="@Model.paid_date" />
    </div>

    <div class="col-md-2">
        <input type="submit" class="btn btn-success" value="Save" />
    </div>
}
